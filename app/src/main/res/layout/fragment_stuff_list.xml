<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.StuffListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rv_primary_light"
            android:gravity="center"
            android:orientation="horizontal"
            android:elevation="4dp">

            <ImageButton
                android:id="@+id/ib_SuffList_cat1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_property_1_book_fill0_wght400_grad0_opsz48"
                app:tint="@color/rv_txt_light" />

            <ImageButton
                android:id="@+id/ib_SuffList_cat2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_property_1_styler_fill0_wght400_grad0_opsz48"
                app:tint="@color/rv_txt_light" />

            <ImageButton
                android:id="@+id/ib_SuffList_cat3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_property_1_tools_power_drill_fill0_wght400_grad0_opsz48"
                app:tint="@color/rv_txt_light" />

            <ImageButton
                android:id="@+id/ib_SuffList_cat4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_property_1_account_balance_wallet_fill0_wght400_grad0_opsz48_1"
                app:tint="@color/rv_txt_light" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_StuffList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

    </LinearLayout>

</FrameLayout>