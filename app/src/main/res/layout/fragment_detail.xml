<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_detailFrag_headBar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/rv_primary_light"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_detailFrag_headBar_type"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="0"
                    android:src="@drawable/ic_property_1_science_fill0_wght400_grad0_opsz48" />

                <TextView
                    android:id="@+id/tv_detailFrag_headBar_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="TextView"
                    android:textAllCaps="true"
                    android:textColor="@color/rv_txt_light"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_detailFrag_headBar_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="100%"
                    android:textAllCaps="true"
                    android:textColor="@color/rv_primary_primary"
                    android:textSize="20sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/et_detailFrag_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="48dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Lorem ipsum in the good ol’ days. We are just getting started. We are on the ground floor. Success feeds pride. Pride kills urgency. So nothing fails like success."
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/tv_detailFrag_loanEndDate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="0"
                android:background="@color/rv_primary_light"
                android:gravity="center"
                android:text="2jours3mois"
                android:textColor="@color/rv_txt_light"
                android:textSize="34sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="48dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_detailFrag_borrower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_detailFrag_borrower_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="4dp"
                        android:text="actuellement prêté à :" />

                    <TextView
                        android:id="@+id/tv_detailFrag_borrower"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/rv_txt_dark"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detailFrag_stuffType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_detailFrag_stuffType_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="4dp"
                        android:text="type :" />

                    <TextView
                        android:id="@+id/tv_detailFrag_stuffType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/rv_txt_dark"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detailFrag_initialLoanDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_detailFrag_initialLoanDate_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="4dp"
                        android:text="prêté le :" />

                    <TextView
                        android:id="@+id/tv_detailFrag_initialLoanDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/rv_txt_dark"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detailFrag_loanDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_detailFrag_loanDuration_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="4dp"
                        android:text="durée :" />

                    <TextView
                        android:id="@+id/tv_detailFrag_loanDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/rv_txt_dark"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detailFrag_creationDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_detailFrag_creationDate_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="4dp"
                        android:text="ajouté le :" />

                    <TextView
                        android:id="@+id/tv_detailFrag_creationDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/rv_txt_dark"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detailFrag_owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_detailFrag_owner_label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingEnd="4dp"
                        android:text="Propriétaire :" />

                    <TextView
                        android:id="@+id/tv_detailFrag_owner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="TextView"
                        android:textColor="@color/rv_txt_dark"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    </LinearLayout>
</FrameLayout>